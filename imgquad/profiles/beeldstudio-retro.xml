<?xml version="1.0"?>

<profile>

<!-- Profile for Beeldstudio Retro. Each "schema"
element links a search pattern to a corresponding schema

- Value for "type" is either "fileName or "parentDirName"
- Value for "match" is either "is", "startswith", "endswith" or "contains"
-->

<!-- File extensions that will be processed (case insensitive) -->
<extension>tif</extension>
<extension>tiff</extension>
<extension>jpg</extension>
<extension>jpeg</extension>

<!-- Schematron schema definition -->
<schema type="fileName" match="endswith" pattern=".jpg">beeldstudio-retro.sch</schema>

</profile>


